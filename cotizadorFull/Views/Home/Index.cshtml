                todoOk = false;
            } else if (isNaN(ton20)) {
                todoOk = false;
                document.getElementById("inp_ton_20").style.borderColor = "#CD3435";
            }

            else if (ton20 < 1) {
                todoOk = false;
                document.getElementById("inp_ton_20").style.borderColor = "#CD3435";
            }
            else if (ton20 > 4000) {
