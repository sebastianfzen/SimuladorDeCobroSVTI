                todoOk = false;

            } else if (isNaN(campoCantidad40)) {
                todoOk = false;
                document.getElementById("inp_cant_40").style.borderColor = "#CD3435";
            }

            else if (campoCantidad40 < 1) {
                todoOk = false;
                document.getElementById("inp_cant_40").style.borderColor = "#CD3435";
            }
